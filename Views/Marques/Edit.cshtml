@model LocationVoiture.ViewModels.MarqueAddVM

<div class="container mt-4">
    <h2>Modifier la Marque</h2>

    <form asp-action="Edit" asp-route-id="@ViewBag.Id" method="post" class="mt-3">
        <div class="mb-3">
            <label class="form-label">Libellé :</label>
            <input asp-for="Libelle" class="form-control" />
            <span asp-validation-for="Libelle" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Enregistrer</button>
        <a href="/Marques/Index" class="btn btn-secondary">Retour</a>
    </form>
</div>
